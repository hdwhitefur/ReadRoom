<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.unc.cs.hdwhite.readroom" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayResults"
            android:label="@string/title_activity_display_results"
            android:parentActivityName=".MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unc.cs.hdwhite.readroom.MenuActivity" />
        </activity>
        <activity
            android:name=".ToRead"
            android:label="@string/title_activity_to_read"
            android:parentActivityName=".MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unc.cs.hdwhite.readroom.MenuActivity" />
        </activity>
        <activity
            android:name=".HaveRead"
            android:label="@string/title_activity_have_read"
            android:parentActivityName=".MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.unc.cs.hdwhite.readroom.MenuActivity" />
        </activity>
    </application>

</manifest>
