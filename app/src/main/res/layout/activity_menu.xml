<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection"
        android:id="@+id/HaveRead"
        android:layout_below="@+id/ToRead"
        android:layout_alignLeft="@+id/ToRead"
        android:layout_alignStart="@+id/ToRead"
        android:layout_alignRight="@+id/ToRead"
        android:layout_alignEnd="@+id/ToRead"
        android:onClick="sendCollection"/>

    <Button
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:text="Wishlist"
        android:id="@+id/ToRead"
        android:layout_row="11"
        android:layout_column="9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:onClick="sendWishlist"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/LookFor"
        android:layout_row="13"
        android:layout_column="8"
        android:layout_columnSpan="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sendSearch"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/LookFor"
        android:layout_toStartOf="@+id/LookFor"
        android:layout_alignTop="@+id/LookFor" />
</RelativeLayout>
